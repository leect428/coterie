<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/group_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Steve Carrell Fan Page"
        android:textSize="@dimen/group_title_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/group_image"
        android:textColor="@color/white"
        android:background="@color/shadow"
        android:padding="@dimen/group_title_padding"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group_image"
        android:layout_marginTop="@dimen/posts_margin_top">
        <TextView
            android:id="@+id/posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="10320 \nPOSTS"
            android:layout_marginStart="@dimen/posts_margin_left"
            android:layout_marginLeft="@dimen/posts_margin_left"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/posts"
            tools:text="442 \nMEMBERS"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/posts_margin_left"
            android:layout_marginStart="@dimen/posts_margin_left" />
        <Button
            android:id="@+id/create_post"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimary"
            android:padding="0dp"
            android:layout_marginRight="@dimen/group_button_margin_right"
            android:text="Create Post"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/post_recycler_margin_top"
        android:layout_marginLeft="@dimen/post_recycler_margin_left"
        android:id="@+id/post_recycler"
        app:layout_constraintTop_toBottomOf="@id/group_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>