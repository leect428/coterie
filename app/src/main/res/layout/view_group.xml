<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/group_icon"
        android:layout_width="@dimen/group_image_width"
        android:layout_height="@dimen/group_image_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:src="@drawable/group" />
    <TextView
        android:id="@+id/group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text = "Group Juan"
        android:textColor="@color/black"
        android:textSize="@dimen/group_name_text_size"
        android:layout_marginTop="@dimen/group_name_top_margin"
        app:layout_constraintEnd_toStartOf="@id/group_button"
        app:layout_constraintStart_toEndOf="@id/group_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/group_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text = "This is the description of Group. Awesomeness."
        app:layout_constraintEnd_toStartOf="@id/group_button"
        app:layout_constraintStart_toEndOf="@id/group_icon"
        app:layout_constraintTop_toBottomOf="@id/group_name"/>
    <Button
        android:id="@+id/group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Add Group"
        android:paddingRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>